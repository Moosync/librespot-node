{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "types/index.d.ts"
    ]
  },
  "include": [
    "src/**/*",
  ],
  "files": [
    "types/index.d.ts"
  ]
}